{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./",
    "types": [
       "node"
    ],
    "typeRoots": [
       "../node_modules/@types"
    ]
  },
  "exclude":[
    "node_modules"
  ]
}
